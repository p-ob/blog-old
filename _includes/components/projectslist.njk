<section class="projects-grid">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="project">
			<a href="{{ post.url | url }}">
				<h3>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</h3>
				{% if post.data.summary %}
					<p>
						{{ post.data.summary }}
					</p>
				{% endif %}
				<p>
					<time datetime="{{ post.date | machineDate }}">
						<small>{{ post.date | readableDate }}</small>
					</time>
				</p>
				{% if post.data.tags %}
					<p>
						{% for tag in post.data.tags %}
						{%- if tag != "projects" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					</p>
				{% endif %}
			</a>
		</article>
	{% endfor %}
</section>
