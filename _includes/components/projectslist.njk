<section class="post-cards">
	{% for post in postslist | reverse %}
		<div {% if post.url == url %} data-current="current item"{% endif %} class="post-card project">
			<a style="display: contents;" href="{{ post.url | url }}">
				<div class="accent"></div>
				<h2>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</h2>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
				{% if post.data.summary %}
					<p>
						{{ post.data.summary }}
					</p>
				{% endif %}
				{% if post.data.tags %}
					<p>
						{% for tag in post.data.tags %}
						{%- if tag != "projects" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					</p>
				{% endif %}
			</a>
		</div>
	{% endfor %}
</section>
