---
layout: layouts/base.njk
section: home
permalink: /index.html
---

{% set featured = collections.featured %}
<div class="featured-grid">
{%- for featuredItem in featured.slice(0, 1) -%}
        <div class="featured-grid-item">
            <h2>{{ featuredItem.data.title }}</h2>
            <div style="display: flex; justify-content: space-between;">
                <div>
                    <time datetime="{{ featuredItem.date | machineDate }}">
                        <small>{{ featuredItem.date | readableDate }}</small>
                    </time>
                    <p>{{ featuredItem.data.summary }}</p>
                </div>
                <object style="width: 15rem;" data="static/img/CoffeeDoddle.svg" type="image/svg+xml"></object>
            </div>
            <div>
                <a class="link" href="{{ featuredItem.url | url }}">
                    <mwc-button outlined class="details" label="Read more"></mwc-button>
                </a>
            </div>
        </div>
    {%- endfor -%}
    <div class="featured-grid-item">
        <h2>Bio</h2>
        <div style="display: flex; justify-content: space-between;">
            <p>My name is Patrick O'Brien, and I'm a software engineer with a passion for front end architecture. I have experience in building and maintaining front end ecosystems to enable rapid and scalable development.</p>
            <object style="width: 15rem;" data="static/img/DoogieDoodle.svg" type="image/svg+xml"></object>
        </div>
        <div>
            <a class="link" href="/about"><mwc-button outlined label="Learn more"></mwc-button></a>
        </div>
    </div>
</div>

{% set talks = collections.talks | reverse %}
{% set posts = collections.posts | reverse %}
{% set projects = collections.projects | reverse %}
<div class="post-cards">
    {%- for talk in talks.slice(0, 1) -%}
        <div class="post-card talk">
            <div class="accent"></div>
            <h2>{{ talk.data.title }}</h2>
            <time datetime="{{ talk.date | machineDate }}">
                <small>{{ talk.date | readableDate }}</small>
            </time>
            <p>{{ talk.data.summary }}</p>
            <a href="{{ talk.url | url }}">
                <mwc-button outlined class="details" label="Read more"></mwc-button>
            </a>
        </div>
    {%- endfor -%}
    {%- for project in projects.slice(0, 1) -%}
        <div class="post-card project">
            <div class="accent"></div>
            <h2>{{ project.data.title }}</h2>
            <time datetime="{{ project.date | machineDate }}">
                <small>{{ project.date | readableDate }}</small>
            </time>
            <p>{{ project.data.summary }}</p>
            <a href="{{ project.url | url }}">
                <mwc-button outlined class="details" label="Read more"></mwc-button>
            </a>
        </div>
    {%- endfor -%}
    {%- for post in posts.slice(0, 1) -%}
        <div class="post-card blog">
            <div class="accent"></div>
            <h2>{{ post.data.title }}</h2>
            <time datetime="{{ post.date | machineDate }}">
                <small>{{ post.date | readableDate }}</small>
            </time>
            <p>{{ post.data.summary }}</p>
            <a href="{{ post.url | url }}">
                <mwc-button outlined class="details" label="Read more"></mwc-button>
            </a>
        </div>
    {%- endfor -%}
</div>